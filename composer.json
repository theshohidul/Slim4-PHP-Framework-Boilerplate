{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.1",
        "php-di/php-di": "^6.1",
        "php": "^7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7 || ^8"
    },
    "autoload": {
        "psr-4": {
            "App\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always"
    }
}
